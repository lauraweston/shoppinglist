<div class="row">
  <div class="col-xs-12">
    <h1>My Lists</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <a href="<%= new_list_path %>" class="btn btn-default" role="button">
      <span class="glyphicon glyphicon-plus"></span>
    </a>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <ul class="list-group">
      <% @lists.each do |list| %>
        <li class="list-group-item">
          <%= link_to list.name, list_path(list) %>
            <%= link_to ('<span class="glyphicon glyphicon-trash pull-right"></span>').html_safe, 
            list_path(list), 
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <a href="<%= url_for :controller => 'authorisation', :action => 'logout' %>" class="btn btn-default" role="button">Log Out</a>
  </div>
</div>
