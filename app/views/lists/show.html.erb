<div class="row">
  <div class="col-xs-12">
    <h1>
      <%= @list.name %>
    </h1>
  </div>
</div>

<%= render 'list_actions' %>

<div class="row">
  <div class="col-xs-12">
    <ul class="list-group">
      <% @items.each do |item| %>
        <li class="list-group-item">
          <div class="checkbox">
            <label>
              <input type="checkbox" class="list-item-checkbox" value="<%= item.name %>">
              <%= item.name %>
            </label>
            <%= link_to ('<span class="glyphicon glyphicon-pencil show-in-edit-mode"></span>').html_safe, edit_list_item_path(@list, item) %>
            <%= link_to ('<span class="glyphicon glyphicon-trash pull-right show-in-edit-mode pull-right"></span>').html_safe, 
              list_item_path(@list, item), 
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<%= render 'list_actions' %>

<div class="row">
  <div class="col-xs-12">
    <p class="text-center">
      <%= link_to '<span class="show-in-edit-mode">Delete List</span>'.html_safe, list_path(@list),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
</div>



