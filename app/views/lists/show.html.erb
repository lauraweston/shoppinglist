<div class="row">
  <div class="col-xs-12">
    <h1>
      <%= @list.name %>
    </h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <a href="<%= new_list_item_path(@list) %>" class="btn btn-default" role="button">
      <span class="glyphicon glyphicon-plus"></span>
    </a>
    <a href="<%= lists_path %>" class="pull-right">Back to all lists</a>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <ul class="list-group">
      <% @items.each do |item| %>
        <li class="list-group-item">
          <%= item.name %> 
          <%= link_to ('<span class="glyphicon glyphicon-pencil"></span>').html_safe, edit_list_item_path(@list, item) %>
          <%= link_to ('<span class="glyphicon glyphicon-trash pull-right"></span>').html_safe, 
            list_item_path(@list, item), 
            method: :delete,
            data: { confirm: 'Are you sure?' } %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <p class="text-center">
      <%= link_to 'Delete List', list_path(@list),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
</div>



